<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/videoViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:text="VideoViewDemo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/mediaCodecButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="MediaCodecDemo"
        app:layout_constraintBottom_toBottomOf="@+id/mediaPlayerButton"
        app:layout_constraintStart_toEndOf="@+id/mediaPlayerButton"
        app:layout_constraintTop_toTopOf="@+id/mediaPlayerButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/mediaPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="MediaPlayerDemo"
        app:layout_constraintBottom_toBottomOf="@+id/videoViewButton"
        app:layout_constraintStart_toEndOf="@+id/videoViewButton"
        app:layout_constraintTop_toTopOf="@+id/videoViewButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>